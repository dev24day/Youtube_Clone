header.header
    .header_column
        a(href=routes.home)
            i.fab.fa-youtube
    .header_column
        form(action=routes.search, method="get")
            input(type="text", name="term", placeholder="Search by term...")
    .header_column
        ul
            if !user.isAuthenticated
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Log in
            else
                li
                    a(href=`${routes.videos}${routes.upload(user.id)}`) Upload
                li
                    a(href=`${routes.users}${routes.user_detail(user.id)}`) Profile
                li
                    a(href=routes.logout) Logout
        